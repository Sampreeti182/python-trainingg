#exercise 9
with open("numbers.txt","w") as f:
    for i in range(1,11)
        f.write(f"{i}-{i*i}\n")

#exercise 10
from datetime import datetime
with open("log.txt","a") as f:
    timestamp=datetime.now().strftime("%Y-%m-%d %H:%M:%S")
    f.write(f"{timestamp} - Application started\n")

